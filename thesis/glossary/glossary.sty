}

\newglossaryentry{BLOB}{
	text={BLOB},
	name={BLOB (\textit{Binary Large OBject})},
	description={Gran objeto binario, un tipo de dato que se utiliza para almacenar cualquier tipo de información binaria, usualmente de gran tamaño, como imágenes, videos o archivos}
}

\newglossaryentry{Docker}{
	name={Docker},
	description={Plataforma de código abierto que permite a los desarrolladores empaquetar, distribuir y ejecutar aplicaciones en contenedores. Un contenedor es una unidad estándar de software que empaqueta el código y todas sus dependencias, de modo que la aplicación se ejecute de la misma manera en cualquier entorno. Más información en \url{https://www.docker.com}}
}

\newglossaryentry{PostgreSQL}{
